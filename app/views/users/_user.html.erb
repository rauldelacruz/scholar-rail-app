<b>Id:</b>
<%= link_to user.id, user_path(user) %>
<br>
<b>Email:</b>
<%= user.email %>
<br>
<b>Confirmation:</b>
<%= boolean_label(user.confirmed?) %>
<br>
<b><%= 'sign_in_count'.humanize %>:</b>
<%= user.sign_in_count %>
<br>
<b><%= 'current_sign_in_at'.humanize %>:</b>
<%= user.current_sign_in_at %>
<br>
<b><%= 'last_sign_in_at'.humanize %>:</b>
<%= user.last_sign_in_at %>
<br>
<b><%= 'current_sign_in_ip'.humanize %>:</b>
<%= user.current_sign_in_ip %>
<br>
<b><%= 'last_sign_in_ip'.humanize %>:</b>
<%= user.last_sign_in_ip %>
<br>
<b><%= 'locked_at'.humanize %>:</b>
<%= user.locked_at %>
<br>
<b><%= 'roles'.humanize %>:</b>
<%= user.active_roles.join(", ") %>
<br>
<% if current_user.admin? %>
  <%= link_to edit_user_path(user), class: "btn btn-sm btn-success" do %>
    <i class="fas fa-user-edit"></i> Edit
  <% end %>
  <%= link_to ban_user_path(user), method: :patch, class: "btn btn-sm btn-dark" do %>
   <i class="fas fa-hammer"></i> <%= ban_status(user) %>
  <% end %>
  <%= link_to user, method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-sm btn-danger" do %>
    <i class="fas fa-trash"></i> Delete
  <% end %>
<% end %>
